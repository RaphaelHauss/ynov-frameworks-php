{% extends 'layouts.app' %}

{% block content %}
	<div class="container">
		{% if errors.any() %}
			<ul>
				{% for error in errors.all() %}
				<li>{{ error }}</li>
				{% endfor %}
			</ul>
		{% endif %}

		<form action="{{ route('article.store') }}" method="post" accept-charset="utf-8">
			<input type="hidden" name="_token" value="{{ csrf_token() }}">

			<div class="form-group">
				<label for="ArticleTitle">Titre :</label>
				<input type="text" name="title" id="ArticleTitle" class="form-control" value="{{ old('title') }}">
			</div>
			<div class="form-group">
				<label for="ArticleContent">Contenu :</label>
				<textarea class="form-control" name="content" id="ArticleContent">{{ old('content') }}</textarea>
			</div>

			<div class="form-group">
				<label for="ArticlePublishedAt">Date de publication</label>
				<input type="text" class="form-control" name="published_at" id="ArticlePublishedAt" value="{{ old('published_at', 'now' | date('d/m/Y')) }}">
			</div>

			<button type="submit">Enregistrer</button>
		</form>
	</div>
{% endblock %}
