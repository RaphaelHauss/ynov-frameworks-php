{% extends 'layouts.app' %}

{% set title = 'Hello world' %}

{% block content %}
    <div class="container">
        <h1>Hello world</h1>

        {% for article in articles %}
        	<h2>{{ article.title }}</h2>
        	<p>{{ article.author.name }}</p>
        {% endfor %}

        {{ articles.render() | raw() }}
    </div>
{% endblock %}
