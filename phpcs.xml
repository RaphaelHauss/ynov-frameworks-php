<?xml version="1.0"?>
<ruleset name="PSR2">
	<description>Sp√©cific PSR-2 validation for Laravel 5.3</description>

	<file>./app</file>
	<file>./config</file>
	<file>./database</file>
	<file>./routes</file>
	<file>./tests</file>
	<file>./deploy.php</file>

	<arg name="colors"></arg>

	<rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
		<exclude-pattern>./database/*</exclude-pattern>
		<exclude-pattern>./tests/*</exclude-pattern>
	</rule>

	<rule ref="PSR2"/>
</ruleset>
